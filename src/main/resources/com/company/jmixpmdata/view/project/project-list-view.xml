<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://projectListView.title"
      focusComponent="projectsDataGrid">
    <data>
        <collection id="projectsDc"
                    class="com.company.jmixpmdata.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
                <property name="roadmap" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="projectsDl" readOnly="true" cacheable="true">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
<!--                <query>-->
<!--                    <![CDATA[select e from Project e where e.status = @enum(com.company.jmixpmdata.entity.ProjectStatus.NEW)]]>-->
<!--                </query>-->
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="projectsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="projectsDataGrid.create"/>
            <button id="editButton" action="projectsDataGrid.edit"/>
            <button id="removeButton" action="projectsDataGrid.remove"/>
            <button id="createWithDM" text="msg://createWithDM.text"/>
            <simplePagination id="pagination" dataLoader="projectsDl"/>
        </hbox>
        <dataGrid id="projectsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="projectsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name" editable="true"/>
                <column property="startDate" editable="true"/>
                <column property="endDate"/>
                <column property="manager"/>
                <column property="status"/>
                <column property="roadmap"/>
                <column property="labels" editable="true"/>
                <editorActionsColumn>
                    <editButton icon="EDIT"/>
                    <cancelButton icon="BAN"/>
                </editorActionsColumn>
                <column property="totalEstimatedEfforts"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
