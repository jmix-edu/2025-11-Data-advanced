<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://workloadView.title">

    <data>
        <keyValueCollection id="workloadDc">
            <loader id="workloadDl">
                <query>
                    select tsk.assignee, sum(tsk.estimatedEfforts) from Task_ tsk
                    where tsk.closed = false group by tsk.assignee
                 </query>
            </loader>
            <properties>
                <property name="assignee" class="com.company.jmixpmdata.entity.User"/>
                <property name="estimatedEfforts" datatype="integer"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox>
            <button id="refreshButton" action="keyValueEntitiesDataGrid.refresh"/>
        </hbox>
        <dataGrid id="keyValueEntitiesDataGrid" dataContainer="workloadDc" width="100%">
            <actions>
                <action id="refresh" type="list_refresh"/>
            </actions>
            <columns>
                <column property="assignee" header="msg://com.company.jmixpmdata.entity/Task.assignee"/>
                <column property="estimatedEfforts" header="msg://estimatedEffortsTotal"/>
            </columns>
        </dataGrid>

    </layout>
</view>